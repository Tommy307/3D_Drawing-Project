#include<iostream>
#include<cmath>
using namespace std;
#define dived 2

int range,divisor;
double coordinate_y_stor[1000000];
double f(int x){
    return x*x;
}                                                  //目标函数

void out_coordinate(int a){
    if(a>range||a<-range) return;
    else if(a==0){
        coordinate_y_stor[range]=f(0)/divisor;
        out_coordinate(a-dived);
        out_coordinate(a+dived);
    }
    else if(a>0){
        coordinate_y_stor[range+a]=-f(a)/divisor;
        cout<<"<line stroke=#306FFF stroke-width=3 stroke-opacity=0.6 x1="<<a-dived<<" x2="<<a<<" y1="<<coordinate_y_stor[range+a-dived]<<" y2="<<coordinate_y_stor[range+a]<<"></line>"<<endl;
        out_coordinate(a+dived);
    }
    else{
        coordinate_y_stor[range-a]=-f(a)/divisor;
        cout<<"<line stroke=#306FFF stroke-width=3 stroke-opacity=0.6 x1="<<a+dived<<" x2="<<a<<" y1="<<coordinate_y_stor[range-(a+dived)]<<" y2="<<coordinate_y_stor[range-a]<<"></line>"<<endl;
        out_coordinate(a-dived); 
    }
}
int main(){
    cout<<"Please input your function!"
    cout<<"Please input the absolute value of a range you want,but no more than 500!"<<endl;
    cin>>range;
    divisor=f(range)/500;
    if(!divisor) divisor=1;
    cout<<"<svg width=1300 height=1000>"<<endl;
    cout<<"<g transform=translate(600,500)>"<<endl;
    cout<<"<line stroke=#000000 stroke-width=1 stroke-opacity=1 x1=-625 y1=0 x2=575 y2=0></line>"<<endl;
    cout<<"<line stroke=#000000 stroke-width=1 stroke-opacity=1 x1=0 y1=500 x2=0 y2=-500></line>"<<endl;
    cout<<"<line stroke=#000000 stroke-width=1 stroke-opacity=1 x1=570 y1=5 x2=575 y2=0></line>"<<endl;
    cout<<"<line stroke=#000000 stroke-width=1 stroke-opacity=1 x1=570 y1=-5 x2=575 y2=0></line>"<<endl;
    cout<<"<line stroke=#000000 stroke-width=1 stroke-opacity=1 x1=0 y1=-500 x2=5 y2=-495></line>"<<endl;
    cout<<"<line stroke=#000000 stroke-width=1 stroke-opacity=1 x1=0 y1=-500 x2=-5 y2=-495></line>"<<endl;
    out_coordinate(0);
    cout<<"</g>"<<endl;
    cout<<"</svg>";
}
